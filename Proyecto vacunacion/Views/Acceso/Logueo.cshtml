@model Proyecto_vacunacion.Models.usuario

@{
    ViewData["Title"] = "Logueo";
}

<h1>Logueo</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Logueo">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
       

            <div class="form-group">
                <label asp-for="login" class="control-label"></label>
                <input asp-for="login" class="form-control" />
                <span asp-validation-for="login" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="clave" class="control-label"></label>
                <input asp-for="clave" type="password" class="form-control" />
                <span asp-validation-for="clave" class="text-danger"></span>
            </div>
            

            <div class="form-group">
                <a asp-action="Logueo" class="btn btn-primary">Limpiar</a>
                <input type="submit" value="Ingresar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
